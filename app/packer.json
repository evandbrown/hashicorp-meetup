{
  "variables": {
    "revision": "",
    "account_file": "",
    "project_id": "null"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `account_file`}}",
      "project_id": "{{user `project_id`}}",
      "source_image": "ubuntu-1404-trusty-v20160314",
      "zone": "us-central1-f",
      "image_name": "myapp-{{timestamp}}-{{user `revision`}}"
    },
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "commit": "true" 
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "out/app",
      "destination": "/usr/local/bin/app"
    },
    {
      "type": "shell",
      "inline": [
        "chmod +x /usr/local/bin/app"
      ]
    }
  ],
  "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "gcr.io/{{user `project_id`}}/myapp",
                "tag": "{{user `revision`}}",
                "only": ["docker"]
            }
        ]
    ]
}
